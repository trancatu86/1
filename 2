Sub RotateAroundZ()
    Dim x As Double
    Dim y As Double
    Dim z As Double
    Dim newX As Double
    Dim newY As Double
    Dim newZ As Double
    Dim angle As Double
    
    ' Đặt giá trị ban đầu
    x = 1 ' Giá trị ban đầu của x
    y = 2 ' Giá trị ban đầu của y
    z = 3 ' Giá trị ban đầu của z
    angle = 90 ' Góc xoay 90 độ
    
    ' Chuyển đổi góc sang radian
    Dim radian As Double
    radian = angle * Application.WorksheetFunction.Pi() / 180
    
    ' Tính toán tọa độ sau khi xoay quanh trục Z
    newX = x * Cos(radian) - y * Sin(radian)
    newY = x * Sin(radian) + y * Cos(radian)
    newZ = z ' Không thay đổi z
    
    ' Hiển thị kết quả
    Debug.Print "Tọa độ ban đầu: (" & x & ", " & y & ", " & z & ")"
    Debug.Print "Tọa độ sau khi xoay 90 độ quanh trục Z: (" & newX & ", " & newY & ", " & newZ & ")"
End Sub
